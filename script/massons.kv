<Button>:
	background_normal: ''
	color: '000000ff'
	background_color: 'fffceeff'

<InputLabel@Label>:
	color: '000000ff'
	canvas.before:
		Color:
			rgba: (1,0,0,1)
		Rectangle:
			size: self.size
			pos: self.pos
		Color:
			rgba: (1,0.99,0.93,1)
		Rectangle:
			size: (self.width - 16, self.height - 16)
			pos: (self.x + 8, self.y + 8)

<CustomDropDown>
	Button:
		text: 'Трек №1  «Райли»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №1  «Райли»')
	Button:
		text: 'Трек №2  «1-я комната»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №2  «1-я комната»')
	Button:
		text: 'Трек №3  «2-я комната»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №3  «2-я комната»')
	Button:
		text: 'Трек №4  «3-я комната»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №4  «3-я комната»')
	Button:
		text: 'Трек №5  «Сигнализация»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №5  «Сигнализация»')
	Button:
		text: 'Трек №6  «Побег»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №6  «Побег»')
	Button:
		text: 'Трек №7  «Победа»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №7  «Победа»')
	Button:
		text: 'Трек №8  «Поражение»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №8  «Поражение»')
	Button:
		text: 'Трек №9  «Alarm»'
		size_hint_y: None
		height: 44
		on_release: root.select('Трек №9  «Alarm»')


<MainWindow>:
	orientation: 'horizontal'
	spacing: 50

	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'img/background.jpeg'

<InputWindow>:
	orientation: 'vertical'
	spacing: 15
	padding: 15, 30, 15, 30

	run: run
	door: door
	book: book
	coin: coin
	declaration: declaration
	brick: brick
	hand: hand
	cup: cup
	table: table
	president: president
	ring: ring
	players: players

	InputLabel:
		text: 'Запуск сценария/кнопка'
		id: run
	InputLabel:
		text: 'Геркона двери'
		id: door
	InputLabel:
		text: 'Книги'
		id: book
	InputLabel:
		text: 'Монетница'
		id: coin
	InputLabel:
		text: 'Кнопка декларации'
		id: declaration
	InputLabel:
		text: 'Кнопка кирпича'
		id: brick
	InputLabel:
		text: 'Сканер руки'
		id: hand
	InputLabel:
		text: 'Кубок'
		id: cup
	InputLabel:
		text: 'Ящики стола'
		id: table
	InputLabel:
		text: 'Президенты'
		id: president
	InputLabel:
		text: 'Перстень'
		id: ring
	InputLabel:
		text: 'Список участников'
		id: players


<OutputWindow>:
	orientation: 'vertical'
	spacing: 30

	bt_initQuest: bt_initQuest
	quest_state: quest_state
	bt_runQuest: bt_runQuest

	bt_songs: bt_songs
	bt_play: bt_play
	bt_pause: bt_pause
	bt_stop: bt_stop
	bt_alarm: bt_alarm
	slider: slider

	timer: timer
	progressbar: progressbar
	bt_3min: bt_3min
	bt_m3min: bt_m3min

	bt_hallwayOn: bt_hallwayOn
	bt_room1On: bt_room1On
	bt_coinOn: bt_coinOn
	bt_declarationOn: bt_declarationOn
	bt_brickOn: bt_brickOn
	bt_stonesOn: bt_stonesOn
	bt_room2On: bt_room2On
	bt_leftOn: bt_leftOn
	bt_tableOn: bt_tableOn
	bt_rightOn: bt_rightOn
	bt_room3On: bt_room3On
	bt_underOn: bt_underOn
	bt_inputOn: bt_inputOn
	bt_hallwayOff: bt_hallwayOff
	bt_room1Off: bt_room1Off
	bt_coinOff: bt_coinOff
	bt_declarationOff: bt_declarationOff
	bt_brickOff: bt_brickOff
	bt_stonesOff: bt_stonesOff
	bt_room2Off: bt_room2Off
	bt_leftOff: bt_leftOff
	bt_tableOff: bt_tableOff
	bt_rightOff: bt_rightOff
	bt_room3Off: bt_room3Off
	bt_underOff: bt_underOff
	bt_inputOff: bt_inputOff

	BoxLayout:
		size_hint_y: 0.08
		orientation: 'horizontal'
		padding: 15, 15, 15, 0
		spacing: 15

		Button:
			id: bt_initQuest
			text: 'Init quest'
			on_press: root.bt_initQuest_press()

		Label:
			id: quest_state
			text: 'Квест собран'
			color: '000000ff'

			canvas.before:
				Color:
					rgba: (0,1,0,1)
				Rectangle:
					size: self.size
					pos: self.pos

		Button:
			id: bt_runQuest
			text: 'Run quest'
			on_press: root.bt_runQuest_press()

	GridLayout:
		rows: 5
		size_hint_y: 0.57
		padding: 15
		spacing: 15

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Свет в коридоре'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_hallwayOn
					on_press: root.bt_hallwayOn_press()
				Button:
					text: 'Off'
					id: bt_hallwayOff
					on_press: root.bt_hallwayOff_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Свет в 1-й комнате'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_room1On
					on_press: root.bt_room1On_press()
				Button:
					text: 'Off'
					id: bt_room1Off
					on_press: root.bt_room1Off_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Шкатулка'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_coinOn
					on_press: root.bt_coinOn_press()
				Button:
					text: 'Off'
					id: bt_coinOff
					on_press: root.bt_coinOff_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Декларация'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_declarationOn
					on_press: root.bt_declarationOn_press()
				Button:
					text: 'Off'
					id: bt_declarationOff
					on_press: root.bt_declarationOff_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Подсветка кирпича'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_brickOn
					on_press: root.bt_brickOn_press()
				Button:
					text: 'Off'
					id: bt_brickOff
					on_press: root.bt_brickOff_press(0)

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Камни/ниша'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_stonesOn
					on_press: root.bt_stonesOn_press()
				Button:
					text: 'Off'
					id: bt_stonesOff
					on_press: root.bt_stonesOff_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Проход 2-ю комнату (свет)'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_room2On
					on_press: root.bt_room2On_press()
				Button:
					text: 'Off'
					id: bt_room2Off
					on_press: root.bt_room2Off_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Левый ящик комода'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_leftOn
					on_press: root.bt_leftOn_press()
				Button:
					text: 'Off'
					id: bt_leftOff
					on_press: root.bt_leftOff_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Ящик стола'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_tableOn
					on_press: root.bt_tableOn_press()
				Button:
					text: 'Off'
					id: bt_tableOff
					on_press: root.bt_tableOff_press()

		Widget:

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Правый ящик комода'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_rightOn
					on_press: root.bt_rightOn_press()
				Button:
					text: 'Off'
					id: bt_rightOff
					on_press: root.bt_rightOff_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Проход в 3-ю комнату'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_room3On
					on_press: root.bt_room3On_press()
				Button:
					text: 'Off'
					id: bt_room3Off
					on_press: root.bt_room3Off_press()

		Widget:

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Лаз'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_underOn
					on_press: root.bt_underOn_press()
				Button:
					text: 'Off'
					id: bt_underOff
					on_press: root.bt_underOff_press()

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'ЭМ входа'
			BoxLayout:
				spacing: 5
				Button:
					text: 'On'
					id: bt_inputOn
					on_press: root.bt_inputOn_press()
				Button:
					text: 'Off'
					id: bt_inputOff
					on_press: root.bt_inputOff_press()

	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.25
		padding: 15
		spacing: 15

		BoxLayout:
			orientation: 'vertical'
			size_hint_x: 0.6
			spacing: 15

			Button:
				id: bt_songs
				text: 'Трек №1  «Райли»'
				on_release: root.open_dd()

			BoxLayout:
				orientation: 'horizontal'
				spacing: 10

				Button:
					id: bt_play
					text: 'play'
					on_press: root.bt_play_press()

				Button:
					id: bt_pause
					text: 'pause'
					on_press: root.bt_pause_press()

				Button:
					id: bt_stop
					text: 'stop'
					on_press: root.bt_stop_press()

		Button:
			id: bt_alarm
			text: 'Alarm'
			size_hint_x: 0.3
			on_press: root.bt_alarm_press()

		Slider:
			id: slider
			orientation: 'vertical'
			size_hint_x: 0.1
			min: 0
			max: 100
			value: 100
			step: 1
			on_touch_move: root.slider_move()

	BoxLayout:
		padding: 15
		size_hint_y: 0.1
		spacing: 30

		BoxLayout:
			orientation: 'vertical'
			spacing: 15
			size_hint_x: 0.7

			Label:
				id: timer
				text: 'Времени квеста прошло: 00:00:00 / 01:00:00  (0%)'

			ProgressBar:
				id: progressbar
				value: 0
				max: 3600

		Button:
			id: bt_m3min
			text: '- 3 мин'
			size_hint_x: 0.15
			on_press: root.bt_m3min_press()

		Button:
			id: bt_3min
			text: '+ 3 мин'
			size_hint_x: 0.15
			on_press: root.bt_3min_press()